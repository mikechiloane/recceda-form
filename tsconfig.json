{
  "compilerOptions": {
    "target": "ES2017",
    "module": "None",
    "lib": ["DOM", "ES2017"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "build", "examples"]
}